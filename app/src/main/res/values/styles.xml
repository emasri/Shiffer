<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BlueColorShiffer</item>
        <item name="colorPrimaryDark">@color/BlueColorShiffer</item>
        <item name="colorAccent">@android:color/black</item>

    </style>





    <style name="EditTextStartUpActivity">

        <!-- Customize your EditText here. -->
        <item name="android:textColor">@android:color/black</item>

        <item name="android:background">@drawable/edittextborder</item>

        <item name="android:padding">4dp</item>


        <item name="android:maxLines">1</item>

        <item name="android:lines">1</item>

    </style>
    <style name="ButtonStartUpActivity">

        <!-- Customize your EditText here. -->
        <item name="android:textColor">@android:color/white</item>


        <item name="android:background">@drawable/edittextborder</item>




    </style>

    <!--herer the popups style -->
    <style name="ShifferPopupsStyle" parent="AppTheme">
<!--for gray background-->
        <item name="android:windowIsFloating">true</item>

<!--for transp background-->
        <!--<item name="android:windowIsTranslucent">true</item>-->

        <item name="android:windowCloseOnTouchOutside">true</item>




    </style>

</resources>
